<%- include ("partials/header"); %>
<br />
<div class= "card">
    <div class= "card-body"> 
        <h5 class= "card-title"><%= title %></h5>
        <form action="/add" method="post">
            <div class="form-group row">
                <label for="nama" class="col-sm-2 col-form-label">Nama</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="nama" placeholder="string" name="nama" value="<%= item.nama %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="umur" class="col-sm-2 col-form-label">Umur</label>
                <div class="col-sm-10">
                    <input type="number" class="form-control" id="umur" placeholder="integer" name="umur" value="<%= item.umur %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="tinggi" class="col-sm-2 col-form-label">Tinggi Badan</label>
                <div class="col-sm-10">
                    <input type="number" step="0.01" class="form-control" id="tinggi" placeholder="float" name="tinggi" value="<%= item.tinggi %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="tanggallahir" class="col-sm-2 col-form-label">Tanggal Lahir</label>
                <div class="col-sm-10">
                    <input type="date" class="form-control" id="tanggallahir" placeholder="tanggallahir" name="tanggallahir" value="<%= item.tanggallahir %>">
                </div>
            </div>
            <div class="form-group row">
                <label for="ismenikah" class="col-2 col-form-label">Status</label>
                <div class="col-10">
                    <select id="ismenikah" class="form-control" name="ismenikah">
                        <option value="true" <%= item.ismenikah ? ' selected' : '' %>">Sudah Menikah</option>
                        <option value="false" <%= !item.ismenikah ? ' selected' : '' %>>Belum Menikah</option>
                    </select>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-primary">Save</button>
            <a href="/" class="btn btn-danger">cancel</a>
        </form>
    </div>
</div>
<%- include ("partials/footer"); %>